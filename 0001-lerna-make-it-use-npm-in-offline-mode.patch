---
 lerna.json | 3 ++-
 1 file changed, 2 insertions(+), 1 deletion(-)

diff --git a/lerna.json b/lerna.json
index a2bb50ba7..5c266512f 100644
--- a/lerna.json
+++ b/lerna.json
@@ -2,5 +2,6 @@
   "packages": [
     "packages/*"
   ],
-  "version": "independent"
+  "version": "independent",
+  "npmClientArgs": ["--offline"]
 }
